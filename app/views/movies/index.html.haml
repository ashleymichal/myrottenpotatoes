.haml
%h1 All Movies

%table#movies
	%thead
		%tr
			%th #
			%th Movie Title
			%th Rating
			%th Release Date
			%th More Info
			%th Edit
			%th Delete
	%tbody
		- @movies.each_with_index do |movie, index|
			%tr
				%td= index + 1
				%td= movie.title
				%td= movie.rating
				%td= movie.release_date
				%td= link_to "More about #{movie.title}", movie
				%td= link_to "Edit", edit_movie_path(movie)
				%td= link_to 'Destroy', movie_path(movie), :method => :delete

= link_to 'Back to movie list', movies_path

= link_to 'Add new movie', new_movie_path